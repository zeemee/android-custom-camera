<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="150dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="2dp"
    android:padding="12dp"
    android:background="@drawable/clear_border_drawable_question">
    
    <TextView
        android:id="@+id/tvPromptItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="17dp"
        android:inputType="textMultiLine"
        android:layout_alignParentTop="true"
        android:textColor="@color/textOrBorderColor"/>

    <Button
        android:id="@+id/btnAnswerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeemee_answer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:minHeight="40dip"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/textOrBorderColor"
        android:background="@drawable/clear_border_drawable_button"/>

    <include layout="@layout/list_of_users"
        android:id="@+id/rlAvatarAnswers"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>


</RelativeLayout>