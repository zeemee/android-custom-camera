<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="150dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="2dp"
    android:padding="12dp"
    android:background="@drawable/clear_border_drawable_question">

    <TextView
        android:id="@+id/tvPromptItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="17dp"
        android:inputType="textMultiLine"
        android:layout_alignParentTop="true"
        android:textColor="@color/textOrBorderColor"/>

    <Button
        android:id="@+id/btnAnswerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeemee_answer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:minHeight="40dip"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/textOrBorderColor"
        android:background="@drawable/clear_border_drawable_button"/>

    <RelativeLayout
        android:id="@+id/rlAvatarAnswers"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="start|bottom"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_avatar_one"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/iv_avatar_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_avatar_one"
            android:layout_marginLeft="-13dp"/>

        <ImageView
            android:id="@+id/iv_avatar_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_avatar_two"
            android:layout_marginLeft="-13dp"/>

        <ImageView
            android:id="@+id/iv_avatar_four"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_avatar_three"
            android:layout_marginLeft="-13dp"/>

        <ImageView
            android:id="@+id/iv_avatar_five"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_avatar_four"
            android:layout_marginLeft="-13dp"/>

        <TextView
            android:id="@+id/tv_overflow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/clear_border_drawable_avatar"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/textOrBorderColor"
            android:layout_toRightOf="@+id/iv_avatar_four"
            android:layout_marginLeft="-13dp"/>

    </RelativeLayout>


</RelativeLayout>